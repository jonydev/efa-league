<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.apsoft.scfb.ui.ApplicationTeamActivity">
    <TextView
        android:id="@+id/tv_team_detail_teamName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/match_fragment_tv_head_height"
        android:background="#CE0000"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="球队赛程" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="比赛报名"
        android:textColor="#333333"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/ll_scedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="#cccccc"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/iv_left_teamhead_application"
            android:layout_width="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/tv_left_teamname_item"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_left_teamhead_application"
            android:layout_toLeftOf="@+id/ll_left_app"
            android:layout_height="match_parent"/>

        <!--<ImageView
            android:id="@+id/iv_left_teamflag_application"
            android:src="@mipmap/ic_launcher"
            android:layout_toLeftOf="@+id/ll_center"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
-->

        <LinearLayout
        android:id="@+id/ll_left_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/ll_center"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/iv_teamcloth_left_top"
            android:layout_width="@dimen/lvitem_team_notstart_iv_teamcloth_left_top_width"
            android:layout_height="@dimen/lvitem_team_notstart_iv_teamcloth_left_top_height"
            android:src="@drawable/qiudui_logo"
            />

        <ImageView
            android:id="@+id/iv_teamcloth_left_bottom"
            android:layout_width="@dimen/lvitem_team_notstart_iv_teamcloth_left_bottom_width"
            android:layout_height="@dimen/lvitem_team_notstart_iv_teamcloth_left_bottom_height"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/qiudui_logo" />

    </LinearLayout>






       <!-- <ImageView
            android:id="@+id/iv_right_teamflag_application"
            android:layout_width="20dp"
            android:layout_toRightOf="@+id/ll_center"
            android:layout_centerVertical="true"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher"/>-->
        <LinearLayout
            android:id="@+id/ll_right_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/ll_center"
            android:layout_centerVertical="true"

            >
            <ImageView
                android:id="@+id/iv_teamcloth_right_top"
                android:layout_width="@dimen/lvitem_team_notstart_iv_teamcloth_left_top_width"
                android:layout_height="@dimen/lvitem_team_notstart_iv_teamcloth_left_top_height"
                android:src="@drawable/qiudui_logo"
                />

            <ImageView
                android:id="@+id/iv_teamcloth_right_bottom"
                android:layout_width="@dimen/lvitem_team_notstart_iv_teamcloth_left_bottom_width"
                android:layout_height="@dimen/lvitem_team_notstart_iv_teamcloth_left_bottom_height"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/qiudui_logo" />

        </LinearLayout>



        <TextView
            android:id="@+id/tv_right_teamname_application"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@+id/iv_right_teamhead_application"
            android:layout_toRightOf="@+id/ll_right_app"
            android:text=""/>

        <ImageView
            android:id="@+id/iv_right_teamhead_application"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher"/>


        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="VS"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_time_child_application"
                android:layout_width="wrap_content"
                android:text="00:00"
                android:textColor="#333333"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_place_child_application"
                android:layout_width="wrap_content"
                android:text="一号场"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_height="1dp" />
    <TextView
        android:id="@+id/ll_join_match_status"
        android:layout_width="wrap_content"
        android:text="xxxxxxx"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="守门员"
        android:textColor="#333333"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/ll_team_gk_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="#333333"
        android:text="xxxx" />
    <TextView
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="后卫"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/ll_team_guard_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:text="xxxx" />

    <TextView
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中场"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/ll_team_md_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:text="xxxx" />
    <TextView
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前锋"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/ll_team_fw_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:text="xxxxx" />

    <TextView
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/ll_join_match"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="报名参赛"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:background="#cccccc"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/ll_stop_join_match"
            android:layout_width="0dp"
            android:textColor="#333333"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="本轮请假" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp" />
</LinearLayout>
