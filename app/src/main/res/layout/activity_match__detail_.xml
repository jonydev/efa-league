<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="com.apsoft.scfb.ui.Match_Detail_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_left_team_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="23dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/team_icon" />

                    <TextView
                        android:id="@+id/tv_left_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="@dimen/head_textsize_17" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_left_team_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="@dimen/head_textsize_17"
                        android:text=""
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="@dimen/head_textsize_17"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_right_team_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="@dimen/head_textsize_17"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_right_team_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="23dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/team_icon" />

                    <TextView
                        android:id="@+id/tv_right_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="@dimen/head_textsize_17"
                        />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_join_player"
                android:layout_width="match_parent"
                android:layout_below="@+id/rl_top"
                android:layout_marginTop="11dp"
                android:layout_height="132dp"
                android:layout_marginLeft="@dimen/maginleft_13dp"
                android:layout_marginRight="@dimen/maginright_13dp"
                android:background="@drawable/activity_match_detail_bg"
                >
                <TextView
                    android:id="@+id/tv_join_player"
                    android:layout_width="match_parent"
                    android:text="参赛人员"
                    android:textColor="#333333"
                    android:textSize="@dimen/textsize_14"
                    android:background="@drawable/text_join_bg"
                    android:layout_height="30dp"
                    android:paddingLeft="11dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/tv_left_player"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_join_player"
                    android:layout_toLeftOf="@+id/tv_divider"
                    android:textColor="#D82128"
                    android:textSize="@dimen/content_textsize_12"
                    />

                <TextView
                    android:id="@+id/tv_divider"
                    android:layout_width="1dp"
                    android:layout_below="@+id/tv_join_player"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="21dp"
                    android:background="#EEEEEE"
                    android:layout_height="60dp" />

                <TextView
                    android:id="@+id/tv_right_player"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_join_player"
                    android:layout_toRightOf="@+id/tv_divider"
                    android:textColor="#D82128"
                    android:textSize="@dimen/content_textsize_12"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_judge"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_below="@id/rl_join_player"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/maginleft_13dp"
                android:layout_marginRight="@dimen/maginright_13dp"
                android:background="@drawable/rl_judge_group"
                >
                <TextView
                    android:id="@+id/tv_judge_group"
                    android:layout_width="match_parent"
                    android:text="裁判组"
                    android:textColor="#333333"
                    android:textSize="@dimen/textsize_14"
                    android:background="@drawable/text_join_bg"
                    android:layout_height="30dp"
                    android:paddingLeft="11dp"
                    android:gravity="center_vertical"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_judge_group"
                    android:orientation="vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="11dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="主裁："
                            android:textColor="#666666"
                            android:textSize="@dimen/content_textsize_12"
                            />
                        <TextView
                            android:id="@+id/tv_primary_judger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="@dimen/content_textsize_12"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="边裁："
                            android:textColor="#666666"
                            android:textSize="@dimen/content_textsize_12"
                            />
                        <TextView
                            android:id="@+id/tv_second_judger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="@dimen/content_textsize_12"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="四方官员："
                            android:textColor="#666666"
                            android:textSize="@dimen/content_textsize_12"
                            />
                        <TextView
                            android:id="@+id/tv_fourth_officious"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="@dimen/content_textsize_12"
                            />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_race_recode"
                android:layout_width="match_parent"
                android:text="比赛记录"
                android:textColor="#333333"
                android:textSize="@dimen/textsize_14"
                android:background="@drawable/text_join_bg"
                android:layout_height="30dp"
                android:paddingLeft="11dp"
                android:layout_marginLeft="@dimen/maginleft_13dp"
                android:layout_marginRight="@dimen/maginright_13dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rl_judge"
                android:gravity="center_vertical"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ll_match_change_people"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/maginleft_13dp"
                android:layout_marginRight="@dimen/maginright_13dp"
                android:layout_below="@+id/tv_race_recode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            

            <RelativeLayout
                android:id="@+id/rl_judge_exact"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rl_judge_group"
                android:layout_below="@+id/ll_match_change_people"
                android:layout_marginLeft="@dimen/maginleft_13dp"
                android:layout_marginRight="@dimen/maginright_13dp"
                >
                <TextView
                    android:id="@+id/tv_judge_exact"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="判罚准确性"
                    android:textSize="@dimen/textsize_14"
                    android:background="@drawable/text_join_bg"
                    android:gravity="center"
                    android:textColor="#333333"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_judge_exact"
                    android:layout_height="match_parent">
                    <RatingBar
                        android:id="@+id/ratingbar_exact"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        style="@style/judge_ratingbar_style"
                        android:layout_centerInParent="true"
                        android:numStars="5"
                        android:rating="3"
                        />
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_judge_fair"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rl_judge_group"
                android:layout_below="@+id/rl_judge_exact"
                android:layout_marginLeft="@dimen/maginleft_13dp"
                android:layout_marginRight="@dimen/maginright_13dp"
                >
                <TextView
                    android:id="@+id/tv_judge_fair"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="执法公正性"
                    android:textSize="@dimen/textsize_14"
                    android:background="@drawable/text_join_bg"
                    android:gravity="center"
                    android:textColor="#333333"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_judge_fair">
                    <RatingBar
                        android:id="@+id/ratingbar_fair"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        style="@style/judge_ratingbar_style"
                        android:layout_centerInParent="true"
                        android:numStars="5"
                        android:rating="3"
                        />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_race_control"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rl_judge_group"
                android:layout_below="@+id/rl_judge_fair"
                android:layout_marginLeft="@dimen/maginleft_13dp"
                android:layout_marginRight="@dimen/maginright_13dp"
                >
                <TextView
                    android:id="@+id/tv_race_control"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="比赛掌握力"
                    android:textSize="@dimen/textsize_14"
                    android:background="@drawable/text_join_bg"
                    android:gravity="center"
                    android:textColor="#333333"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_race_control">
                    <RatingBar
                        android:id="@+id/ratingbar_race_contorl"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        style="@style/judge_ratingbar_style"
                        android:layout_centerInParent="true"
                        android:numStars="5"
                        android:rating="3"
                        />

                </RelativeLayout>

            </RelativeLayout>
            <Button
                android:id="@+id/btn_sub"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="提交"
                android:textSize="@dimen/head_textsize_17"
                android:textColor="#ffffff"
                android:background="@drawable/btn_bg_submit"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/rl_race_control"
                />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
