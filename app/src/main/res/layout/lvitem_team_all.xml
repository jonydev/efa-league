<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/rl_ivitem_race_bg"
        android:layout_marginLeft="26px"
        android:layout_marginRight="25px"
        android:layout_marginTop="25px"
        android:layout_height="236.7px">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="100px"
            android:layout_height="160px"
            android:layout_marginLeft="69px"
            android:layout_marginTop="42px"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_teamflag_left"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/qiudui_logo"
                />
            <TextView
                android:id="@+id/tv_team_name_left"
                android:text="洪都"
                android:textColor="#333333"
                android:textSize="32px"
                android:layout_marginTop="24px"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/ll_left"
            android:layout_marginLeft="161px"
            >
            <ImageView
                android:id="@+id/iv_teamcloth_left_top"
                android:layout_width="26px"
                android:layout_height="18px"
                android:src="@drawable/qiudui_logo"
                />

            <ImageView
                android:id="@+id/iv_teamcloth_left_bottom"
                android:layout_width="15px"
                android:layout_height="10px"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/qiudui_logo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="132px"
            android:layout_marginTop="51px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_not_start_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未开赛"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="28px"
                android:background="@drawable/tv_not_start_game_bg"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="26px"
                android:textColor="#999999"
                />
            <TextView
                android:id="@+id/tv_detail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26px"
                android:textColor="#999999"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_detail_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="26px"
                android:textColor="#999999"
                />


        </LinearLayout>





        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="100px"
            android:layout_height="160px"
            android:layout_marginRight="76px"
            android:layout_marginTop="42px"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_teamflag_right"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/qiudui_logo"
                />
            <TextView
                android:id="@+id/tv_team_name_right"
                android:text="洪都"
                android:textColor="#333333"
                android:textSize="32px"
                android:layout_marginTop="24px"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/ll_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55px"
            >
            <ImageView
                android:id="@+id/iv_teamcloth_right_top"
                android:layout_width="26px"
                android:layout_height="18px"
                android:src="@drawable/qiudui_logo"
                />

            <ImageView
                android:id="@+id/iv_teamcloth_right_bottom"
                android:layout_width="15px"
                android:layout_height="10px"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/qiudui_logo" />

        </LinearLayout>



    </RelativeLayout>


</LinearLayout>