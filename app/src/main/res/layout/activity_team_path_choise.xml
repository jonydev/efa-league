<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/tv_createam_top_path"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_creat_team_toptext_height"
        android:background="#CE0000"
        android:gravity="center"
        android:text="球裤颜色选择"
        android:textColor="#ffffff"
        android:textSize="@dimen/activity_creat_team_toptext_textsize" />

    <GridView
        android:id="@+id/gridView_path"
        android:layout_below="@+id/tv_createam_top_path"
        android:layout_above="@+id/btn_complete_path"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:horizontalSpacing="24dp"
        android:verticalSpacing="28dp"
        android:paddingLeft="30dp"
        android:paddingTop="35dp"
        android:scrollbars="none"
        android:numColumns="4" >
    </GridView>
    <Button
        android:id="@+id/btn_complete_path"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="完成"
        android:textSize="@dimen/head_textsize_17"
        android:textColor="#ffffff"
        android:background="@drawable/btn_teampath_bg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        />
</RelativeLayout>