<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/ll_item_team"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_item_team"
        android:layout_width="match_parent"
        android:layout_height="63dp">

        <ImageView
            android:id="@+id/ll_image_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/qiudui_logo"
            />
        <TextView
            android:id="@+id/ll_team_member_name"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/ll_image_header"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="15dp"
            android:text="9-xxxxxxxx"
            android:textSize="15sp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_player_result_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_team_member_name"
            android:layout_alignLeft="@+id/ll_team_member_name"
            android:layout_marginTop="4sp"
            android:text="è¿›xxxxxxxxxx "
            />
    </RelativeLayout>

</LinearLayout>