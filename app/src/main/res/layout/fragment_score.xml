<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
    tools:context="com.apsoft.scfb.ui.fragments.matches.racelist.ScoreFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frag_score_rltop_height"
        android:background="#0066CC"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/tv_turn_top"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content_textsize_12"
            android:layout_marginLeft="@dimen/frag_score_tv_turn_maginleft"
            android:layout_centerVertical="true"
            android:text="排名"
            android:textColor="#ffffff"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_name_top"
            android:text="球队"
            android:layout_toRightOf="@+id/tv_turn_top"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/content_textsize_12"
            android:textColor="#ffffff"
            android:layout_width="@dimen/tv_turn_width"
            android:layout_marginLeft="@dimen/tv_turn_maginleft"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_name_top"
            >
            <TextView
                android:id="@+id/tv_score_top"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_textsize_12"
                />
            <TextView
                android:id="@+id/tv_win_and_lose"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="胜平负"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_textsize_12"
                />
            <TextView
                android:id="@+id/tv_goals_num_top"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="进球"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_textsize_12"
                />
            <TextView
                android:id="@+id/tv_yellow_card_top"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="黄牌"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_textsize_12"
                />
            <TextView
                android:id="@+id/tv_red_card_top"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="红牌"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_textsize_12"
                />

            <TextView
                android:id="@+id/tv_retain_score_top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="净胜球"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_textsize_12" />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/match_brief_fragment_raceIntro_text_maginleft"
        android:layout_marginRight="@dimen/match_brief_fragment_raceIntro_text_maginleft"
        android:layout_gravity="center_horizontal"
        android:background="#EEEEEE"
        android:layout_height="@dimen/item_expand_line" />
    <ListView
        android:id="@+id/lv_score"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>
