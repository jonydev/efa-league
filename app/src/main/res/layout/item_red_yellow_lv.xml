<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_goal_bill_rl_topheight"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/rl_yellow_turns"
            android:layout_width="40dp"
            android:layout_marginLeft="@dimen/item_goal_bill_tvgoal_amginleft"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_turn_item_red_yellow"
                android:layout_width="@dimen/item_goal_bill_tvgoal_width"
                android:layout_height="@dimen/item_goal_bill_tvgoal_height"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/turns_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_textsize_12" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rl_yellow_turns"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_player_name_item_red_yellow"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/content_textsize_12"
                android:text="xxxxccc" />
            <TextView
                android:id="@+id/tv_team_name_item_red_yellow"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/content_textsize_12"
                android:text="美国加州斯特斯城队" />
            <TextView
                android:id="@+id/tv_red_num_item_red_yellow"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/content_textsize_12"
                android:text="2" />

            <TextView
                android:id="@+id/tv_yellow_num_item_red_yellow"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textColor="#333333"
                android:textSize="@dimen/content_textsize_12"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>