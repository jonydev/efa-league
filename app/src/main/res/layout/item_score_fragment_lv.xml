<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_goal_bill_rl_topheight"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/rl_turns"
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_turn"
                android:layout_width="@dimen/item_goal_bill_tvturn_width"
                android:layout_height="@dimen/item_goal_bill_tvturn_width"
                android:layout_centerHorizontal="true"
                android:background="@drawable/turns_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_textsize_12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/item_goal_bill_tvname_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_goal_bill_tvname_maginleft"
            android:layout_toRightOf="@+id/rl_turns"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/content_textsize_12"
            android:text="美国加州斯特斯城队" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_name"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/content_textsize_12"
                android:text="2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_sheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/content_textsize_12"
                    android:text="x"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    />
                <TextView
                    android:id="@+id/tv_ping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/content_textsize_12"
                    android:text="x"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    />
                <TextView
                    android:id="@+id/tv_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                android:textColor="#333333"
                android:textSize="@dimen/content_textsize_12"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_goals_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/content_textsize_12"
                android:text="3" />

            <TextView
                android:id="@+id/tv_yellow_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="@dimen/content_textsize_12"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/tv_red_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333333"
                android:gravity="center"
                android:textSize="@dimen/content_textsize_12"
                android:text="0" />

            <TextView
                android:id="@+id/tv_retain_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="@dimen/content_textsize_12"
                android:gravity="center"
                android:text="2" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>